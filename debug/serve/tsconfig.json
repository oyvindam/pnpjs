{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "baseUrl": ".",
        "rootDir": "../../",
        "outDir": "../../serve/",
        "declaration": true,
        "declarationMap": true,
        "types": [
            "sharepoint"
        ],
        "lib": [
            "es6",
            "dom"
        ],
        "paths": {
            "@pnp/*": [
                "../../packages/*"
            ]
        },
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "inlineSources": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "files": [
        "./main.ts"
    ]
}